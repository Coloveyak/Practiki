<script>
var a=0;
  p=prompt("Как называется красная планета");
  if (p == "Марс")
{
alert("да");
a = a+1;
} else {
  alert("нет");
}

var a=0;
  p=prompt("Ты пойдешь по повествке");
  if (p == "Да")
{
alert("Ну все габбела :( ");
a = a+1;
} else {
  alert("А никуда не денешься :)");
}
</script>

<!-- Задание 2 -->
<script>
var n=0;
while (n<=9){
  n = n+1;
  alert(n);
}
</script>

<!-- Задание 3 -->
<script>
do {
  alert("Ну еще по одной!");
} while (prompt("Введите 1 чтобы отказаться") != "1" );
alert("Ну и хватит")
  </script>

<!-- Задание 4 -->
<script> 
// Запрашиваем у пользователя фамилию
const фамилия = prompt("Введите вашу фамилию:");

// Проверка фамилии на палиндром
const isПалиндром = (фамилия === фамилия.split('').reverse().join(''));

// Вывод результата проверки
if (isПалиндром) {
  alert("Ваша фамилия является палиндромом.");
} else {
  alert("Ваша фамилия не является палиндромом.");
}
  </script>

<!--Доп. задание-->
<script> 
// Генерируем случайное число от 1 до 100
const randomNumber = Math.floor(Math.random() * 10) + 1;

// Запрашиваем ввод пользователя
let guess;
while (true) {
  guess = parseInt(prompt("Угадайте число от 1 до 10:"));

  // Проверяем, угадал ли пользователь
  if (guess === randomNumber) {
    alert(`Поздравляем! Вы угадали число: ${randomNumber}`);
    break;
  } else if (guess < randomNumber) {
    alert("Ваше число меньше загаданного.");
  } else {
    alert("Ваше число больше загаданного.");
  }
}
</script>

